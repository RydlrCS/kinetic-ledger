# API Gateway Environment Variables

# Server Configuration
ENV=development
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
AGENT_WEBHOOK_SECRET=your-webhook-secret-here-change-in-production

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Arc Blockchain
ARC_RPC_URL=https://rpc.arc-testnet.circle.com
ARC_CHAIN_ID=421614
USDC_TOKEN_ADDRESS=

# Contract Addresses (populate after deployment)
ATTESTED_MOTION_ADDRESS=
REWARDS_ESCROW_ADDRESS=
NOVELTY_DETECTOR_ADDRESS=

# Agent Service
AGENT_SERVICE_URL=http://localhost:8001

# Logging
VERBOSE=false
LOG_LEVEL=INFO
