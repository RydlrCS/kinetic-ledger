{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm -C apps/web-dapp build",
  "outputDirectory": "apps/web-dapp/.next",
  "devCommand": "pnpm -C apps/web-dapp dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "apps/web-dapp/src/app/**/*.tsx": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
